<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#232126">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:text="Book Title"
        android:textSize="50dp"
        android:textAlignment="center"
        android:fontFamily="@font/my_custom_font"
        android:textColor="#a38e15"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/characteristics_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Characteristics"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#c2c1ba"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/characteristics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Release Date"
            android:textSize="16dp"
            android:textColor="#c2c1ba"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/effect_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Effect"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#c2c1ba"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Pages"
            android:textSize="16dp"
            android:textColor="#c2c1ba"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/ingredients_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Ingredients"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#c2c1ba"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Author"
        android:textSize="16dp"
        android:textColor="#c2c1ba"/>
</LinearLayout>
</LinearLayout>
</LinearLayout>